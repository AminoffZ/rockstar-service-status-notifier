{
  "manifest_version": 3,
  "name": "Notify when Rockstar's service status updates",
  "version": "1.3",
  "web_accessible_resources": [
    {
      "resources": ["script.js"],
      "matches": ["<all_urls>"]
      }
    ],
  "content_scripts": [
    {
      "matches": ["https://*.support.rockstargames.com/servicestatus"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "notifications"
  ]
}
